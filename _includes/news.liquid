<div class="news">
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.announcements.scrollable and news_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign news = site.news | reverse %}
        {% assign news_limit = news_size %}
        {% for item in news limit: news_limit %}
          <tr>
            <th scope="row" style="width:20%; white-space:nowrap; text-align:left; vertical-align:top; font-variant-numeric: tabular-nums; font-feature-settings: 'tnum';">{{ item.date | date: '%b %d, %Y' }}</th>
            <td style="font-weight:400; vertical-align:top;">
              {% if item.inline %}
                {% if item.link %}
                  <a class="news-title" href="{{ item.link | relative_url }}" target="_blank">
                    {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
                  </a>
                {% else %}
                  {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
                {% endif %}
              {% else %}
                {% if item.link %}
                  <a class="news-title" href="{{ item.link | relative_url }}" target="_blank">{{ item.title }}</a>
                {% else %}
                  <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
                {% endif %}
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
