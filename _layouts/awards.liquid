---
layout: default
---
<div class="cv awards-page">
  <div class="card mt-3 p-3">
    <h3 class="card-title font-weight-medium">{{ page.title }}</h3>
    <div class="pt-2">
      <ul class="list-unstyled awards-list">
        {% for item in site.data.awards %}
          <li class="py-2">
            <div class="d-flex align-items-start">
              <div class="award-date font-weight-bold text-nowrap mr-3">
                {{ item.date }}
              </div>
              <div class="award-text">
                <div class="text-muted small">
                  {% if item.link %}
                    <a href="{{ item.link }}" target="_blank" class="award-link">{{ item.title }}</a>
                  {% else %}
                    <span class="award-link">{{ item.title }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
<style>
/* Awards page tweaks */
.awards-page .card-title { font-size: 2rem; font-weight: 500; }

/* Align date/text nicely and give the date a fixed column so wrapped lines line up */
.awards-list .award-date { flex: 0 0 150px; /* fixed column width */ }
.awards-list .award-text { flex: 1 1 auto; min-width: 0; }

/* Make list items a touch tighter on mobile and shrink the date column */
@media (max-width: 576px) {
  .awards-list .award-date { flex-basis: 120px; }
}
</style>

